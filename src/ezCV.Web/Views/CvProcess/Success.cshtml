@{
    ViewData["Title"] = "Thành công";
}

<!-- Font Awesome for icons -->
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" rel="stylesheet">

<div class="container" style="margin-top: 90px">
    <div class="row justify-content-center">
        <div class="col-md-6 text-center">
            <div class="card border-success">
                <div class="card-body py-5">
                    <div class="text-success mb-4">
                        <i class="fas fa-check-circle fa-5x"></i>
                    </div>

                    <h2 class="card-title text-success">Thành công!</h2>

                    <p class="card-text lead mt-4">
                        CV của bạn đã được xử lý thành công.
                    </p>

                    <div class="alert alert-info mt-3" role="alert">
                        <i class="fas fa-info-circle"></i>
                        <strong>Lưu ý:</strong> Nếu không thấy email trong hộp thư chính, hãy kiểm tra thư mục thư rác (spam).
                    </div>

                    <div class="mt-4">
                        <a href="/CvTemplate/Index" class="btn btn-primary me-2">
                            <i class="fas fa-plus"></i> Tạo CV mới
                        </a>
                        <a href="/" class="btn btn-outline-secondary">
                            <i class="fas fa-home"></i> Về trang chủ
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>