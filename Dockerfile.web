# ===== BUILD =====
FROM mcr.microsoft.com/dotnet/sdk:8.0 AS build
WORKDIR /src

# Copy csproj
COPY src/ezCV.Web/ezCV.Web.csproj ./ezCV.Web/
COPY src/ezCV.Domain/*.csproj ./ezCV.Domain/
COPY src/ezCV.Application/*.csproj ./ezCV.Application/

# Restore
RUN dotnet restore ./ezCV.Web/ezCV.Web.csproj

# Copy source
COPY . .

# Publish
RUN dotnet publish ./ezCV.Web/ezCV.Web.csproj -c Release -o /app/publish --no-restore

# ===== RUNTIME =====
FROM mcr.microsoft.com/dotnet/aspnet:8.0 AS runtime
WORKDIR /app
COPY --from=build /app/publish .
ENV ASPNETCORE_HTTP_PORTS=8080
EXPOSE 8080
ENTRYPOINT ["dotnet", "ezCV.Web.dll"]