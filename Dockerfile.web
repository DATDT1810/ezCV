# Build stage
FROM mcr.microsoft.com/dotnet/sdk:8.0 AS build
WORKDIR /src

# Copy csproj
COPY src/ezCV.Web/*.csproj ./ezCV.Web/
RUN dotnet restore ezCV.Web/ezCV.Web.csproj

# Copy source
COPY src/ezCV.Web/. ./ezCV.Web/

# Publish
WORKDIR /src/ezCV.Web
RUN dotnet publish ezCV.Web.csproj -c Release -o /app/publish --no-restore

# Runtime stage
FROM mcr.microsoft.com/dotnet/aspnet:8.0 AS runtime
WORKDIR /app
COPY --from=build /app/publish .

ENV ASPNETCORE_URLS=http://*:8080
EXPOSE 8080

ENTRYPOINT ["dotnet", "ezCV.Web.dll"]