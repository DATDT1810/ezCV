# ================= BUILD STAGE =================
FROM mcr.microsoft.com/dotnet/sdk:8.0 AS build
WORKDIR /src

# Copy project file & restore
COPY src/ezCV.Web/ezCV.Web.csproj ./src/ezCV.Web/
RUN dotnet restore src/ezCV.Web/ezCV.Web.csproj

# Copy toàn bộ source code
COPY src/ ./src/

RUN dotnet publish src/ezCV.Web/ezCV.Web.csproj -c Release -o /app --no-restore -p:UseAppHost=false

# ================= RUNTIME STAGE =================
FROM mcr.microsoft.com/dotnet/aspnet:8.0 AS runtime
WORKDIR /app

COPY --from=build /app .
ENV ASPNETCORE_URLS=http://+:$PORT
EXPOSE $PORT
ENTRYPOINT ["dotnet", "ezCV.Web.dll"]