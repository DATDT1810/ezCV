# ================= BUILD STAGE =================
FROM mcr.microsoft.com/dotnet/sdk:8.0 AS build
WORKDIR /src

COPY *.sln .
COPY src/ezCV.Web/ezCV.Web.csproj ./src/ezCV.Web/
COPY src/ezCV.Application/ezCV.Application.csproj ./src/ezCV.Application/
COPY src/ezCV.Domain/ezCV.Domain.csproj ./src/ezCV.Domain/

RUN dotnet restore

COPY src/ ./src/

RUN dotnet publish src/ezCV.Web/ezCV.Web.csproj -c Release -o /app --no-restore -p:UseAppHost=false

# ================= RUNTIME STAGE =================
FROM mcr.microsoft.com/dotnet/aspnet:8.0 AS runtime
WORKDIR /app

COPY --from=build /app .

# Render sử dụng port 10000
ENV ASPNETCORE_URLS=http://+:${PORT:-10000}
EXPOSE 10000

ENTRYPOINT ["dotnet", "ezCV.Web.dll"]