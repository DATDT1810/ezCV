# Build stage cho Web
FROM mcr.microsoft.com/dotnet/sdk:8.0 AS build
WORKDIR /app

# Copy source
COPY . .

# QUAN TRỌNG: CD vào thư mục src/ 
WORKDIR /app/src

# Restore và build Web
RUN dotnet restore ezCV.Web/ezCV.Web.csproj
RUN dotnet publish ezCV.Web/ezCV.Web.csproj -c Release -o /output

# Runtime stage cho Web
FROM mcr.microsoft.com/dotnet/aspnet:8.0 AS runtime
WORKDIR /app
COPY --from=build /output .
ENV ASPNETCORE_URLS=http://*:8080
EXPOSE 8080
ENTRYPOINT ["dotnet", "ezCV.Web.dll"]