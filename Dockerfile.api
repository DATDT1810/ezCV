FROM mcr.microsoft.com/dotnet/sdk:8.0 AS build
WORKDIR /src

# Copy project file từ thư mục ezCV.Api
COPY ezCV.Api/ezCV.API.csproj ./ezCV.Api/
RUN dotnet restore ./ezCV.Api/ezCV.API.csproj

# Copy everything else
COPY . .
RUN dotnet publish ./ezCV.Api/ezCV.API.csproj -c Release -o /app/publish

FROM mcr.microsoft.com/dotnet/aspnet:8.0
WORKDIR /app
COPY --from=build /app/publish .
ENV ASPNETCORE_URLS=http://+:8080
EXPOSE 8080
ENTRYPOINT ["dotnet", "ezCV.API.dll"]