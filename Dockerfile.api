# Build stage cho API
FROM mcr.microsoft.com/dotnet/sdk:8.0 AS build
WORKDIR /app

# Copy toàn bộ source (vì ezCV.sln trong src/)
COPY . .

# Restore và build API
RUN dotnet restore src/ezCV.Api/ezCV.Api.csproj
RUN dotnet publish src/ezCV.Api/ezCV.Api.csproj -c Release -o /output

# Runtime stage cho API
FROM mcr.microsoft.com/dotnet/aspnet:8.0 AS runtime
WORKDIR /app
COPY --from=build /output .
ENV ASPNETCORE_URLS=http://*:8080
EXPOSE 8080
ENTRYPOINT ["dotnet", "ezCV.Api.dll"]